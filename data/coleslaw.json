  "time": "15 min + chilling",
  "serves": "8",
  "ingredients": [
    "1 head green cabbage, shredded (8 cups)",
    "2 carrots, shredded",
    "¾ cup mayonnaise",
    "2 tbsp sugar",
    "2 tbsp apple cider vinegar",
    "1 tbsp Dijon mustard",
    "½ tsp celery seed",
    "Salt and pepper"
  ],
  "steps": [
    "Toss cabbage and carrots.",
    "Whisk mayo, sugar, vinegar, mustard, celery seed.",
    "Pour over cabbage. Toss to coat.",
    "Season with salt and pepper.",
    "Refrigerate at least 1 hour.",
    "Toss again before serving."
  ],
  "notes": [
    "Salting cabbage first draws out moisture.",
    "Letting it sit melds flavors."
  ],
